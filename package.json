{
	"name": "wp-blueprint-theme-classic",
	"version": "1.0.0",
	"description": "WP Blueprint Theme Classic that provides an object-oriented PHP foundation for WordPress projects that use the traditional WordPress theme system.",
	"main": "index.js",
	"scripts": {
		"dev": "mix",
		"development": "mix",
		"watch": "mix watch",
		"watch-poll": "mix watch -- --watch-options-poll=1000",
		"hot": "mix watch --hot",
		"prod": "mix --production",
		"production": "mix --production",
		"lint": "eslint assets/src/scripts/*",
		"lint:fix": "eslint --fix assets/src/scripts/*",
		"lint:scss": "stylelint 'assets/src/sass/**/*.scss'",
		"lint:scss:fix": "npm run lint-css -- --fix",
		"lint:css": "stylelint **/*.css -i .gitignore",
		"lint:css:fix": "stylelint **/*.css -i .gitignore --fix"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@tinypixelco/laravel-mix-wp-blocks": "^1.2.0",
		"@wordpress/babel-preset-default": "^7.19.0",
		"@wordpress/prettier-config": "^2.18.0",
		"@wordpress/stylelint-config": "^21.18.0",
		"@wordpress/base-styles": "^4.26.0",
		"@wordpress/eslint-plugin": "^14.8.0",
		"@wordpress/dependency-extraction-webpack-plugin": "^3.4.1",
		"stylelint": "^14.10.0",
		"jquery": "^3.6.0",
		"laravel-mix": "^6.0.19",
		"laravel-mix-compress": "^3.0.0",
		"laravel-mix-glob": "^2.0.2",
		"normalize-scss": "^7.0.1",
		"resolve-url-loader": "^3.1.3",
		"sass": "^1.32.13",
		"sass-loader": "^11.1.1"
	}
}

{
	"name": "wp-blueprint/theme-classic",
	"description": "WP Blueprint Theme Classic that provides an object-oriented PHP foundation for WordPress projects that use the traditional WordPress theme system.",
	"type": "wordpress-theme",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "Yanis Deplazes",
			"homepage": "https://github.com/YanisDeplazes"
		}
	],
	"require": {
		"php": ">=5.6",
		"wp-blueprint/theme-core": "^1.0.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
		"wptrt/wpthemereview": "^0.2.1",
		"php-parallel-lint/php-parallel-lint": "^1.2.0",
		"wp-cli/i18n-command": "^2.2.5"
	},
	"autoload": {
		"psr-4": {
			"WPBlueprint\\Theme\\Classic\\": "inc/"
		},
		"files": [
			"inc/helpers.php"
		]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"extra": {
		"installer-paths": {
			"vendor/{$vendor}/{$name}": [
				"type:wordpress-theme"
			]
		}
	},
	"scripts": {
		"lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"lint:wpcs:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
		"make-pot": "wp i18n make-pot . languages/_s.pot"
	}
}
